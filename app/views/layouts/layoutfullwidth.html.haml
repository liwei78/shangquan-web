!!!
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %title= seo_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield :header
  %body
    #pagewrap
      .header
        .top
          .layoutfullwidth
            .right.action
              - if loggin?
                %ul.sf-menu
                  %li.w90
                    =link_to "#{current_user_name}", user_url(current_user_id)
                    %ul
                      %li=link_to "我的品牌", brands_url
                      %li=link_to "我的商品", items_url
                      %li=link_to "我的活动", avatarsetting_users_url
                      %li=link_to "退出", logout_users_url
                  %li=link_to "信息", messages_url
                  %li=link_to "设置", setting_users_url
              - else
                %ul.sf-menu
                  %li= link_to "注册", new_user_url
                  %li= link_to "登录", welcome_users_url
            .logo
              = link_to(image_tag("slogo.jpg"), root_url)
        
        .nav#site_nav
          .layoutfullwidth
            .new-action.right
              = link_to "新分享", share_users_url, :class => "new-share"
              = link_to "新活动", js_void, :class => "new-discover"
            %ul
              %li= link_to "首页", root_url, :class => "index"
              %li= link_to "商家", ""
              %li= link_to "品牌", ""
              %li= link_to "活动", ""
              %li= link_to "商品", ""
              .clearfix
      .layoutfullwidth
        = yield
      = render :partial => "layouts/footer2"