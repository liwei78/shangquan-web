!!!
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %title= seo_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield :header
  %body
    #pagewrap
      .header
        .top
          .layoutfullwidth
            .right.action
              - if loggin?
                =link_to "#{current_user_name}", user_url(current_user_id)
                =link_to "信息", ""
                =link_to "设置", setting_users_url
              - else
                = link_to "注册", new_user_url
                = link_to "登录", welcome_users_url
            .logo
              = link_to(image_tag("slogo.jpg"), root_url)
        
        .nav#site_nav
          .layoutfullwidth
            .new-action.right
              = link_to "新分享", share_users_url, :class => "new-share"
              = link_to "新发现", js_void, :class => "new-discover"
            %ul
              %li= link_to "首页", root_url, :class => "index"
              %li= link_to "热门", ""
              %li
                %span= raw("-")
                = link_to "男青年", "", :class => "sub-nav"
                = link_to "女青年", "", :class => "sub-nav"
                = link_to "生活味", "", :class => "sub-nav"
                = link_to "达人", "", :class => "sub-nav"
                = link_to "好店", "", :class => "sub-nav"
              %li= link_to "最新", ""
              %li= link_to "活动", ""
              .clearfix
      .layoutfullwidth
        = yield
      = render :partial => "layouts/footer2"