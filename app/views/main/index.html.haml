.maincontent
  - for category in Category.top(4)
    %h2
      .right.more
        = link_to "更多", items_url, :target => "_blank"
      %span= category.name
    .hot_items
      %ul
        - for item in category.items.is_suggest.limit(6)
          %li
            .poster= link_to image_tag(item.poster.url(:small), :width => 140, :height => 140), item, :target => "_blank"
            .title
              .right.price
                ￥
                = item.price
              = link_to item.title, item, :target => "_blank"
            .summary
              = item.summary.truncate(10, :omission => "...") if item.summary.present?
        .clearfix
      
  
        
        
        
        
        
        
        
        
        
        