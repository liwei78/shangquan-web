.slider
  .sliderpic#slider
    %ul
      - for banner in Banner.sliders
        %li= link_to image_tag(banner.poster.url), banner.gourl, :target => "_blank"
    .clearfix
  .slidernav
    %ul#slidernav
      - for banner in Banner.sliders
        %li= link_to banner.title, js_void
    .clearfix
  .other
    %ul
      - for tiny in Banner.tinies
        %li
          %h3= link_to tiny.title, tiny.gourl, :target => "_blank"
          %p= tiny.summary
.slidershadow

.likebar
  = link_to "分享达人购物故事", "", :target => "_blank", :class => "share"
  = link_to "收集喜爱，结交朋友", "", :target => "_blank", :class => "addme"
  = link_to "来商圈，做聪明生活家！ ", "", :target => "_blank", :class => "likeme"

.maincontent
  .left.todaystar
    %h2 
      %span
        今日达人
        %em
          Star
    - if @todaystar.present?
      .bigshow.left
        = link_to image_tag(@todaystar.avatar.url, :width => 300, :height => 300), @todaystar
      .ta.right
        .name
          = link_to @todaystar.name, @todaystar, :target => "_blank"
          %span.starv{:title => "认证达人"}
          = link_to "关注", minifollow_user_url(@todaystar), :method => :post, :remote => true, :class => "followstyle"
        .intro
          = @todaystar.intro
        .items
          .title
            TA的分享
          %ul
            - for item in @todaystar.items.is_suggest.limit(8)
              %li= link_to image_tag(item.poster.url(:small), :width => 60, :height => 60), item, :target => "_blank"
            .clearfix
          .clearfix
      .clearfix
  .right.sitestar
    %h2
      .right.more
        = link_to "更多", "", :target => "_blank"
      %span
        商圈达人
    %ul
      - for star in User.stars.is_suggest
        %li
          .avatar.left
            = link_to image_tag(star.avatar.url(:thumb), :width => 60, :height => 60), star, :target => "_blank"
          .info.right
            = link_to star.name, star, :target => "_blank"
            = star.intro
            .follow
              = link_to "关注", minifollow_user_url(star), :method => :post, :remote => true, :class => "followstyle"
          .clearfix
  .clearfix
  .gather-items
    %h2
      %span 达人推荐
    %ul
      - for item in @top_items
        %li
          .poster.left
            = link_to image_tag(item.poster.url(:small), :width => 140, :height => 140), item, :target => "_blank"
          .info.left
            .name
              = link_to item.user.name, item.user, :target => "_blank"
              %span
                推荐
            .price
              ￥
              = item.price
            .summary
              = item.summary.truncate(20, :omission => "...")
            .collects_count
              %span= item.collects_count
              个收藏
            .collect_btn
              = link_to "收藏", "", :class => "collectstyle"
          .clearfix
      .clearfix
    .clearfix
  .left.weektheme
  .right.events
  .clearfix
        
.adbox
  .left.ad= image_tag('ad1.png')
  .right.ad= image_tag('ad2.jpg')
  .clearfix
  
.maincontent
  .themes.left
    %h2
      %span 时尚主题
    - if @top_activity.present?
      .title
        = link_to @top_activity.title, @top_activity, :target => "_blank"
      %p
        = @top_activity.summary
      .banner.left
        = link_to image_tag(@top_activity.poster.url(:middle), :width => 446, :height => 200), @top_activity, :target => "_blank"
      .item_list.right
        %ul
          - for item in @top_activity_items
            %li= link_to image_tag(item.poster.url(:small), :width => 60, :height => 60), item, :target => "_blank"
          .clearfix
      .clearfix
  .events.right
    %h2
      %span 近期活动
    %ul
      - for activity in @suggest_activities
        %li
          .avatar.left
            = link_to image_tag(activity.logo.url, :width => 60, :height => 60), activity, :target => "_blank"
          .info.right
            .title
              .right
                %span= activity.shares_count
                人分享
              = link_to activity.title, activity, :target => "_blank"
            .summary
              = activity.summary.truncate(30, :omission => "...") if activity.summary.present?
            .follow
              = link_to "关注", "", :class => "followstyle"
          .clearfix
  .clearfix

