  = link_to "收集喜爱，结交朋友", "", :target => "_blank", :class => "addme"
  = link_to "来知美，做聪明生活家！ ", "", :target => "_blank", :class => "likeme"

.maincontent
  .left.todaystar
    %h2 
      %span
        今日达人
        %em
          Star
    .bigshow.left
      = link_to image_tag(User.last.avatar.url, :width => 300, :height => 300), ""
    .ta.right
      .name
        = link_to "用户名", "", :target => "_blank"
        %span.starv{:title => "商圈认证达人"}
        = link_to "关注", "", :class => "followstyle"
      .intro
        = "文字"*30
      .items
        .title
          TA的分享
        %ul
          - for item in Item.limit(8)
            %li= link_to image_tag(item.poster.url(:small), :width => 60, :height => 60), ""
          .clearfix
        .clearfix
    .clearfix
  .right.sitestar
    %h2
      .right.more
        = link_to "更多", "", :target => "_blank"
      %span
        商圈达人
    %ul
      - 4.times do
        %li
          .avatar.left
            = link_to image_tag(User.last.avatar.url(:thumb), :width => 60, :height => 60), "", :target => "_blank"
          .info.right
            = link_to "NAME", ""
            = "文字"*10
            .follow
              = link_to "关注", "", :class => "followstyle"
          .clearfix
  .clearfix
  .gather-items
    %h2
      %span 达人推荐
    %ul
      - 6.times do
        %li
          .poster.left
            = link_to image_tag(Item.last.poster.url(:small), :width => 140, :height => 140), Item.last, :target => "_blank"
          .info.left
            .name
              = link_to Item.last.user.name, Item.last.user, :target => "_blank"
              %span
                推荐
            .price
              ￥
              = Item.last.price
            .summary
              = Item.last.summary
              = "文字"*10
            .collects_count
              %span= Item.last.collects_count
              个收藏
            .collect_btn
              = link_to "收藏", "", :class => "collectstyle"
          .clearfix
      .clearfix
    .clearfix
  .left.weektheme
  .right.events
  .clearfix
        
