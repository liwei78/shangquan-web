.slider
  .sliderpic#slider
    %ul
      - for banner in Banner.sliders
        %li= link_to image_tag(banner.poster.url), banner.gourl, :target => "_blank"
    .clearfix
  .slidernav
    %ul#slidernav
      - for banner in Banner.sliders
        %li= link_to banner.title, js_void
    .clearfix
  .other
    %ul
      - for tiny in Banner.tinies
        %li
          %h3= link_to tiny.title, tiny.gourl, :target => "_blank"
          %p= tiny.summary
.slidershadow

.likebar
