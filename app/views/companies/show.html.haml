.showbox
  .title= @company.title
  .address
    %span 地址
    = @company.address
  .tags
    %span 标签
    - for tag in @company.tags
      = link_to tag.name, nav_company_url(:tag => URI.encode(tag.name))
  .action
    = link_to '去过', visited_company_url(@company), :remote => true, :method => :post
    = link_to '收藏', favorite_company_url(@company), :remote => true, :method => :post
    = link_to '分享', share_company_url(@company), :remote => true, :method => :post
    
  .detail
    .title
      %strong 商家详细
    .intro
      = @company.content.html_safe
    .title
      %strong 所含品牌
    .brands
  .comments
    .title
      TA们说
    .write
      = form_tag(write_company_url(@company)) do
        = text_area_tag :content, "", :class => "input"
        .write_action
          = submit_tag("确定", :class => "btn")
    .list
      - for comment in @comments
        .item
          .avatar
            = link_to image_tag(comment.user.avatar.url(:small), :width => 40, :height => 40), comment.user
          .intro
            .name
              = link_to comment.user.name, comment.user
            .content
              = comment.content.html_safe
          .clearfix
    .paginate
      = will_paginate @comments, :param_name => "page", :previous_label => "上一页", :next_label => "下一页"
  
