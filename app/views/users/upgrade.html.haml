- content_for :header do
  :javascript
    $(document).ready(function() {
      $(":radio").bind('click', function(){
        if($(this).val()=="0") {
          $("#com1_input").hide();
          $("#com2_input").hide();
          $("tr").remove("#com2_input_more");
          $("#brand_input").hide();
        }
        if($(this).val()=="1") {
          $("#com1_input").hide();
          $("#com2_input").hide();
          $("tr").remove("#com2_input_more");
          $("#brand_input").hide();
        }
        if($(this).val()=="2") {
          $("#com1_input").show();
          $("#com2_input").hide();
          $("tr").remove("#com2_input_more");
          $("#brand_input").hide();
        }
        if($(this).val()=="3") {
          $("#com1_input").hide();
          $("#com2_input").show();
          $("#brand_input").hide();
        }
        if($(this).val()=="4") {
          $("#com1_input").hide();
          $("#com2_input").hide();
          $("tr").remove("#com2_input_more");
          $("#brand_input").show();
        }
      });
    });
    function add_more(){
      $('<tr id="com2_input_more"><td></td><td colspan="2"><input class="input" name="brand_name[]" type="text" value=""><span class="grey">请输入一个品牌名称</span></td></tr>').insertAfter('#com2_input');}
    
  
= render :partial => "users/usersidebox"
.mainbox
  .formbox
    .title
      升级
    .nav
      %ul
        %li= link_to "用户角色", setting_users_url, :class => "on"
        .clearfix
    .formstyle
      = form_tag(upgraderole_users_url, :multipart => true) do
        %table{:width => '100%', :cellspadding => 6}
          %tr
            %td{:width => 100} 等级
            %td
              = radio_button_tag :role, 0, @user.role==0
              = label_tag(:role_0, '普通用户')
            %td.grey
              
          %tr
            %td
            %td
              = radio_button_tag :role, 1, @user.role==1
              = label_tag(:role_1, '时尚设计师')
            %td.grey
              独立专栏显示您的发布内容

          %tr
            %td
            %td
              = radio_button_tag :role, 2, @user.role==2
              = label_tag(:role_2, '商家用户')
            %td.grey
              您可拥有一个品牌
          %tr.hide.input_tr#com1_input
            %td
              品牌名称
            %td{:colspan => 2}
              = text_field_tag "brand_name[]", "", :class => "input"
              %span.grey 请输入一个品牌名称

          %tr
            %td
            %td
              = radio_button_tag :role, 3, @user.role==3
              = label_tag(:role_3, '商场用户')
            %td.grey
              您可拥有多个品牌
          %tr.hide.input_tr#com2_input
            %td
              品牌名称
            %td{:colspan => 2}
              = text_field_tag "brand_name[]", "", :class => "input"
              %span.grey 请输入一个品牌名称
              = link_to("增加", js_void, :onclick => "add_more();")

          %tr
            %td
            %td
              = radio_button_tag :role, 4, @user.role==4
              = label_tag(:role_4, '品牌用户')
            %td.grey
              可拥有品牌专栏
          %tr.hide.input_tr#brand_input
            %td
              品牌名称
            %td{:colspan => 2}
              = text_field_tag "brand_name[]", "", :class => "input"
              %span.grey 请输入一个品牌名称
            
          
        .btn
          = submit_tag "申请", :class => "submit"
            
        
.clearfix
