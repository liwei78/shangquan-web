= render :partial => "users/usersidebox"
.mainbox
  .formbox
    .title
      谁关注我
    .nav
      %ul
        %li= link_to "我的关注", follows_users_url
        %li= link_to "谁关注我", followers_users_url, :class => "on"
        %li= link_to "我关注谁", following_users_url
