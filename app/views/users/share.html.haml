= render :partial => "users/usersidebox"
.mainbox
  .formbox
    .title
      发表
    .nav
      %ul
        %li= link_to "分享", share_users_url, :class => "on"
        %li= link_to "发现", discover_users_url
        .clearfix
    .formstyle
      = form_tag(updatesetting_users_url, :multipart => true) do
        %table{:width => '100%', :cellspadding => 6}
          %tr
            %td{:width => 100} 显示昵称
            %td= text_field_tag :name, @user.name, :class => "input"
        .btn
          = submit_tag "确定", :class => "submit"
        
.clearfix