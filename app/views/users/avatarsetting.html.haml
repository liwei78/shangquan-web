.leftarea
  = render :partial => "users/settingnav"
    
  .writediv
    = form_tag(updateavatarsetting_users_url, :multipart => true) do
      .singlediv
        .title
          显示头像
        .inputdiv
          = image_tag(@user.avatar.url, :width => 160, :height => 160)
          = image_tag(@user.avatar.url(:thumb), :width => 80, :height => 80)
          = image_tag(@user.avatar.url(:small), :width => 40, :height => 40)
      .singlediv
        .title
          选择文件
        .inputdiv
          = file_field_tag :avatar
      .btns
        = submit_tag "确定", :class => "submit"
    
    
.rightarea
  = render :partial => "users/usersidebox"
  .siderbox
    
  .siderbox
    
.clearfix