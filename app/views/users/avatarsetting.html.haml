= render :partial => "users/usersidebox"
.mainbox
  .formbox
    .title
      设置
    .nav
      %ul
        %li= link_to "昵称设置", setting_users_url
        %li= link_to "用户头像", avatarsetting_users_url, :class => "on"
        .clearfix
    .formstyle
      = form_tag(updateavatarsetting_users_url, :multipart => true) do
        %table{:width => '100%', :cellspadding => 6}
          %tr
            %td{:width => 100} 头像
            %td= image_tag(@user.avatar.url(:small), :width => 40, :height => 40)
          %tr
            %td 选择文件
            %td= file_field_tag :avatar
        .btn
          = submit_tag "确定", :class => "submit"
.clearfix
