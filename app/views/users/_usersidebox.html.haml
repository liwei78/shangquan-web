.userbox
  .avatar
    = image_tag(@user.avatar.url)
  .username
    = @user.name
  .siterole
    = @user.site_role
    - if @user.role == 0
      = link_to "升级", upgrade_users_url 
    - if @user.upgrade_state == 1
      审核中
  - if [2,3,4].include?(@user.role)
    .brands
      .grey
        品牌
      %ul
        - for brand in @user.brands.formal
          %li= brand.name
        .clearfix
      
  .userinfo
    %ul
      %li
        .up
          文章
        .down
          = @user.articles_count
      %li
        .up
          粉丝
        .down
          = @user.followers_count
      %li
        .up
          关注
        .down
          = @user.followings_count
      %li.noborder
        .up
          收藏
        .down
          = @user.favorites_count
      .clearfix
  .following
    .title
      TA关注的人
    .list
      %ul
        - for user in User.all
          %li= link_to image_tag(user.avatar.url(:small), :width => 30, :height => 30), user
