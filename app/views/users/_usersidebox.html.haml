.userbox
  .avatar
    = image_tag(@user.avatar.url)
  .username
    = @user.name
  .siterole
    = @user.site_role
    = link_to "升级", upgrade_users_url if @user.role == 0
  .userinfo
    %ul
      %li
        .up
          文章
        .down
          = @user.articles_count
      %li
        .up
          粉丝
        .down
          = @user.followers_count
      %li
        .up
          关注
        .down
          = @user.followings_count
      %li.noborder
        .up
          收藏
        .down
          = @user.favorites_count
      .clearfix
  .following
    .title
      TA关注的人
    .list
      %ul
        - for user in User.all
          %li= link_to image_tag(user.avatar.url(:small), :width => 30, :height => 30), user
        .clearfix