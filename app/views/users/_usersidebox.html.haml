.userbox
  .userpic
    = image_tag(@user.avatar.url)
  .username
    = @user.name
  .userinfo
    %ul
      %li
        .up
          文章
        .down
          = @user.articles_count
      %li
        .up
          粉丝
        .down
          = @user.followers_count
      %li
        .up
          关注
        .down
          = @user.followings_count
      %li.noborder
        .up
          收藏
        .down
          = @user.favorites_count
      .clearfix
  .homebtn
    = link_to image_tag("myhome.jpg"), user_url(current_user_id)
