.leftarea
  = render :partial => "users/homebtn"
  
  / .banner
  /   = image_tag("/assets/banner.jpg")
  
  %ul.homenav
    %li= link_to "全部", user_url(current_user_id), :class => 'on'
    %li= link_to "时尚", articles_user_url(current_user_id)
    %li= link_to "活动", "#"
    .clearfix
    
  .list
    - for feed in @feeds
      .item
        .avatar= image_tag("/assets/avatar.jpg")
        .content
          .name
            feed.username
          .title
            feed.title
          .text
            = html_escape(raw(article.content))
          .action
            .btn.right
              热度(9)
              回应(4)
              转载
            .tags
              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
        .clearfix
    .paginate
      = will_paginate @feeds, :param_name => "page", :previous_label => "上一页", :next_label => "下一页"
    
    
    
