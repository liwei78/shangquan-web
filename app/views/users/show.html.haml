.leftarea
  = render :partial => "users/homebtn"
  = render :partial => "users/homenav"
    
  .list
    - for feed in @feeds
      .item
        .avatar= image_tag("avatar.jpg")
        .content
          .name
            = feed.username
          .title
            = link_to feed.title, feed.target_url, :target => "_blank"
          .text
            = html_escape(raw(feed.content))
          .action
            .btn.right
              热度(9)
              回应(4)
              转载
            .tags
              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
        .clearfix
    .paginate
      = will_paginate @feeds, :param_name => "page", :previous_label => "上一页", :next_label => "下一页"
    
    
    
.rightarea
  = render :partial => "users/usersidebox"
  .siderbox
    
  .siderbox
    
.clearfix