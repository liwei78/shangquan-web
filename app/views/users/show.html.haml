              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
              %span= link_to "#标签", ""
        .clearfix
    .paginate
      = will_paginate @feeds, :param_name => "page", :previous_label => "上一页", :next_label => "下一页"
    
    
    
