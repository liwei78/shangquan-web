= render :partial => "users/usersidebox"
.mainbox
  .formbox
    .title
      文章
    .nav
      %ul
        %li= link_to "列表", activities_url, :class => "on"
        .clearfix
    .tablestyle
      %table{:width => "100%", :cellpadding => "4"}
        - for activity in @activities
          %tr
            %td
              = link_to activity.title, activity
            %td
              = activity.opening_date
            %td{:width => "50"}
              = link_to "编辑", edit_activity_url(activity)
      = will_paginate @activities, :param_name => "page", :previous_label => "上一页", :next_label => "下一页"
        
.clearfix