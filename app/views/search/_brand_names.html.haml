%ul
  - for brand in brands
    %li= brand.name

:javascript
  $(document).ready(function() {
    $('#brand_search_results > ul > li').mouseover(function(){
      $(this).addClass('hover');
    }).mouseout(function(){
      $(this).removeClass('hover');
    });

    $('#brand_search_results > ul > li').click(function(){
      $('#brand_search').attr('value', $(this).html());
      $('#brand_search_results').hide();
    });
  })  