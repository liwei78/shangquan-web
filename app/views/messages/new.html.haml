= render :partial => "users/usersidebox"
.mainbox
  .formbox
    .title
      消息
    .nav
      %ul
        %li= link_to "系统通知", messages_url
        %li= link_to "私信", my_messages_url
        %li= link_to "发私信", new_message_url, :class => "on"
        .clearfix
    .formstyle
      = form_for(@message) do |f|
        = f.hidden_field :user_id
        %table{:width => '100%', :cellspadding => 6}
          %tr
            %td{:width => 100} 收信人
            %td= link_to @target_user.name, @target_user, :target => "_blank"
          %tr
            %td 内容
            %td= f.text_area :content, :cols => 40, :rows => 6, :class => " wide"
        .btn
          = submit_tag "确定", :class => "submit"
      
        
.clearfix
