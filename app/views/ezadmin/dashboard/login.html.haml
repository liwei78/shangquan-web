!!!
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %title= site_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    = stylesheet_link_tag "admin"
    = javascript_include_tag :admin
    = csrf_meta_tag
    = yield :header
  %body
    .header
      .login-layout
        .logo
          = image_tag("adminlogo.png")
        .nav
          %ul
            %li
              = link_to "登录", ezadmin_login_url
            .clearfix
    .mainbox
      .login-layout
        .login-form
          - unless flash[:error].nil?
            .error
              = flash[:error]
          = form_tag(ezadmin_checklogin_url) do
            .tr
              管理账号
              %br
              = text_field_tag(:account, "", :class => "input")
            .tr
              管理密码
              %br
              = password_field_tag(:password, "", :class => "input")
            .tr
              =submit_tag("登录", :class => "btn")
    .footer
      &copy 2012
      = site_title